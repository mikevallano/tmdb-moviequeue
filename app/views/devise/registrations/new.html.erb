<% content_for(:title, "Sign Up") %>

<article id="page">
  <div class="jumbotron">
    <div class="well">

      <h1><span class="fa fa-step-forward"></span> MovieQueue</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <% if @token.present? %>
          <%= hidden_field_tag :token, @token %>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control pages-form" %>
        </div>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, class: "form-control pages-form" %>
        </div>

        <div class="field">
          <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control pages-form" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control pages-form" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", id: "sign_up_button_new_registration" %>
        </div>
      <% end %><!-- form_for -->

    <div class="sign-in-links">
      <%= render "devise/shared/links" %>
    </div> <!-- sign-in-links -->

    </div> <!-- well -->
  </div> <!-- jumbotron -->
</article>
