<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.owner.username %></td>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', user_list_path(list.owner, list), id: "show_list_link_list_index" %></td>
        <td><%= link_to 'Edit', edit_user_list_path(list.owner, list), id: "edit_list_link_list_index" %></td>
        <td><%= link_to 'Destroy', user_list_path(list.owner, list), id: "destroy_list_link_list_index", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_user_list_path(current_user), id: "new_list_link_list_index" %>
