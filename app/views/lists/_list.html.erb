
<div class="row">
  <% @lists.each do |list| %>
    <article id="list">
    <div class="row">

      <div class="list-image-stack-container">
        <a href="<%= user_list_path(list.owner, list) %>">
          <% list.movies.last(6).each do |movie| %>
            <%= image_for(movie) %>
          <% end %><!-- list.movies.each -->
        </a>
      </div> <!-- list-image-stack-container  -->


    <div class="list-details">
      <h2><%= link_to list.name.titlecase, user_list_path(list.owner, list), id: "show_list_link_list_index" %> <span class="count">(<%= pluralize(list.movies.size, "Movie") %>) <icon class="<%= public_private_indicator(list) %>"><icon></span></h2>
      <p>by <%= list.owner.username %></p>
      <p><%= list.description %></p>
    </div> <!-- list-details -->

    <div class="list-mgt-links">
      <ul>
        <li><%= link_to '<i class="fa fa-chevron-circle-right"></i> Show Movies'.html_safe, user_list_path(list.owner, list), id: "show_list_link_list_index" %></li>
        <% if current_user == list.owner %> <!-- only list owners can edit or delete a list -->
          <li><%= link_to '<i class="fa fa-chevron-circle-right"></i> Manage List'.html_safe, edit_user_list_path(list.owner, list), id: "edit_list_link_list_index" %></li>
        <% end %><!-- if current_user == list.owner  -->
        </ul>
    </div> <!-- list-mgt-links -->

    </div> <!-- row -->
    </article>
  <% end %><!-- @lists.each -->
</div> <!-- row -->
