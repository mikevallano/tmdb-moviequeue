<% content_for(:title, "All Screenings") %>

<p id="notice"><%= notice %></p>

<h1>Screenings Index Page for <%= link_to "#{@movie.title}", movie_path(@movie) %></h1>
<p>This page shows a user's screening history for a given movie.</p>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Date watched</th>
      <th>Location watched</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.movie.title %></td>
        <td><%= screening.date_watched %></td>
        <td><%= screening.location_watched %></td>
        <td><%= screening.notes %></td>
        <td><%= link_to 'Show', movie_screening_path(@movie, screening) %></td>
        <td><%= link_to 'Edit', edit_movie_screening_path(@movie, screening) %></td>
        <td><%= link_to 'Destroy', movie_screening_path(@movie, screening), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Screening', new_movie_screening_path(@movie) %>
