<% if current_user.watched_movies.include?(@movie) %> <!-- #if movie has been seen -->
  <p class="button-main"><%= link_to "Add / Manage Screenings", movie_screenings_path(@movie), id: "add_screening_link_movies_partial" %></p>
<% else %> <!-- #if movie has been seen -->
  <p class="button-main"><%= link_to "Mark as watched", screenings_path(:screening => { notes: nil }, tmdb_id: @movie.tmdb_id, from: "movies_index", page: params[:page]), :method => :post, id: "mark_watched_link_movies_partial", remote: true %></p>
<% end %> <!-- #if movie has been seen -->