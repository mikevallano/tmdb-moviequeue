
<% if !@actor.present? %>

  <h1>Search by actor:</h1>

  <%= form_tag '/tmdb/actor_search', method: :get do %>
    <%= label_tag :actor, "Enter Actor Name: " %>
    <%= text_field_tag :actor, nil, id: "actor_name_actor_search" %></br>
    <%= label_tag :sort_by, "Sort by: " %>
    <%= select_tag :sort_by, options_for_select(Movie::SORT_BY), :include_blank => true %></br>
    <%= submit_tag "Search", id: "submit_button_actor_search" %>
  <% end %>


  <p><%= link_to "Or see what movies two actors have been in together!", two_actor_search_path %></p>
  <p><%= link_to "Or search two movies to see common actors", two_movie_search_path %></p>

<% else %>

  <% if @not_found.present? %>
      <h2>Hmm. <%= @not_found %> Check spelling to be sure.</h2>

  <% else %> <!-- #if @not_found.present -->
    <h2>Here are the movies that <%= @actor.titlecase %> has been in:</h2>
    <p><%= link_to "Get a full list of credits and bio", actor_more_path(actor_id: @actor1_id) %></p>

    <p><%= link_to "Search again", actor_search_path %> </p>

    <div id ="movies_actor_search_loop">
       
    <div class="row tile-container">  
      <% @movies.each do |movie| %>
      <article class="tile-cover-pic">    
          <!-- MODAL TRIGGER -->
          <p><a href="#" data-toggle="modal" data-target="#myModal_<%= movie.tmdb_id %>">
          <%= image_tag "http://image.tmdb.org/t/p/w154#{movie.poster_path}" if movie.poster_path.present? %></a></p>

          <div id="movies_partial_<%= "#{movie.tmdb_id}" %>">
            <%= render partial: 'movies/movie', object: movie %>
          </div>
        </article> <!-- tile-cover-pic -->

      <% end %> <!-- # movies loop -->
    </div> <!-- row  -->


    </div> <!-- movies_actor_search_loop -->

    <%= "Page #{@page} of #{@total_pages}" %></br>

    <% if @previous_page.present? %>
      <%= link_to "Previous page", actor_search_path(actor: "#{@actor}", page: "#{@previous_page}") %>
    <% end %>

    <% if @next_page.present? %>
      <%= link_to "Next page", actor_search_path(actor: "#{@actor}", page: "#{@next_page}") %>
    <% end %>

  <% end %> <!-- #if @not_found.present? -->


<% end %> <!-- # if @actor.present? -->


