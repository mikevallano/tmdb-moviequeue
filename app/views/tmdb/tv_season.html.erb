<h2>Show name: <%= link_to "#{@show_name}", tv_more_path(show_id: @show_id) %></h2>
<h2>Season number: <%= @season_number %></h2>
<p>Seasons: <%= raw @seasons.map {|season| link_to season[:season_number], tv_season_path(show_id: @show_id, season_number: season[:season_number], show_name: @show_name) }.join(', ')  %></p>

<ul>
<% @episodes.each do |episode| %>
  <li>Episode number: <%= episode[:episode_number] %></li>
  <li>Episode name: <%= episode[:name] %> </li>
  <li>Overview: <%= episode[:overview] %> </li>
  <li>Air date: <%= episode[:air_date] %> </li>
  <% if episode[:guest_stars].present? %>
    </br>Guest Stars:
    <% episode[:guest_stars].each do |guest| %>
      <li><%= link_to "#{guest[:name]}", actor_search_path(name: "#{guest[:name]}") %> </li>
      <li><%= image_tag "http://image.tmdb.org/t/p/w150#{guest[:profile_path]}" if guest[:profile_path].present? %></li>
    <% end %>
  <% end %>
</br>
<% end %>

<h3>Season Cast:</h3>
<ul>
<% @season_cast.each do |actor| %>
  <li>Actor: <%= link_to "#{actor[:name]}", actor_search_path(name: "#{actor[:name]}")  %></li>
  <li>Character: <%= actor[:character] %></li>
  <li><%= image_tag "http://image.tmdb.org/t/p/w150#{actor[:profile_path]}" %></li>
<% end %>
</ul>
</ul>