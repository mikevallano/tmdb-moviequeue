<h1>Movies similar to <%= link_to "#{@movie.title}", movie_more_path(tmdb_id: @movie.tmdb_id) %></h1>

  <div id ="similar_movies_loop">

    <% @movies.each do |movie| %>
      <div id="movies_partial_<%= "#{movie.tmdb_id}" %>">
        <%= render partial: 'movies/movie', object: movie %>
      </div>
    <% end %> <!-- # movies loop -->

  </div> <!-- #similar movies loop -->


  <%= "Page #{@page} of #{@total_pages}" %></br>

  <% if @previous_page.present? %>
    <%= link_to "Previous page", similar_movies_path(tmdb_id: @tmdb_id, page: @previous_page) %>
  <% end %>

  <% if @next_page.present? %>
    <%= link_to "Next page", similar_movies_path(tmdb_id: @tmdb_id, page: @next_page) %>
  <% end %>